width = 960px

color-red = #c14638
color-blue = #68c8f2

////////////////////////////////////////////////////////////////////////////////
//                                                                            //
//                                Elements                                    //
//                                                                            //
////////////////////////////////////////////////////////////////////////////////

body
  font-family oxygen
  line-height: 1.2em
  font-size: 12px
  color: #222

strong
  font-weight: bold

p
  margin-bottom: 10px

  &.large
    font-size: 18px
    line-height: 1.2em

h2, h3, h4
  font-weight: normal

h2
  display: none

h3
  font-size: 21px
  line-height: 1.2em
  margin-bottom: 0.2em
  color: darken(color-blue, 25%)

h4
  font-size: 15px
  line-height: 1.2em
  color: color-red

hr
  border: 0
  padding: 0
  margin: 0
  display: block
  height: 250px
  width: 100%
  background-image: url('../images/hr.jpg')
  background-size: cover
  background-position: center center


////////////////////////////////////////////////////////////////////////////////
//                                                                            //
//                                 Layout                                     //
//                                                                            //
////////////////////////////////////////////////////////////////////////////////

body, html
  min-height: 100%

///////////////////////////////////////////
//               Header                  //
///////////////////////////////////////////

header
  logo-source-width = 2048
  logo-source-height = 772
  logo-margin-horizantal = 150px
  logo-width = width - 2 * logo-margin-horizantal
  logo-height = logo-width * logo-source-height / logo-source-width

  overflow: hidden
  padding: 150px 0 100px
  background-image: url('../images/map-top-1x.jpeg')
  background-position: center top
  background-size: cover

  @media only screen and (-Webkit-min-device-pixel-ratio: 1.5), only screen and (-moz-min-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2), only screen and (min-device-pixel-ratio: 1.5)
    background-image: url('../images/map-top-2x.jpeg')

  h1
    text-indent: -999999px
    background-image: url('../images/logo-1x.png')
    background-size: logo-width logo-height
    width: logo-width
    height: logo-height
    margin: 0 auto 50px

    @media only screen and (-Webkit-min-device-pixel-ratio: 1.5), only screen and (-moz-min-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2), only screen and (min-device-pixel-ratio: 1.5)
      background-image: url('../images/logo-2x.png')

  .subtitle
    text-align: center
    color: color-red

///////////////////////////////////////////
//               About                   //
///////////////////////////////////////////

#about
  about-spacing = 75px

  width: 100%
  background-image: url("../images/promo/0058.jpg")
  background-size: cover
  background-position: 0 60%
  color: lighten(color-red, 80%)
  text-align: justify
  line-height: 1.2em
  font-size: 14px

  #about-content
    background-color darken(transparentify(color-red, 93%), 7%)
    width: 50%

    #about-content-inner
      margin: 0 auto;
      padding: about-spacing
      max-width: (width / 2)

///////////////////////////////////////////
//               Events                  //
///////////////////////////////////////////

#events
  background-image: url('../images/promo/0084.jpg')
  background-size: cover !important
  background-repeat: no-repeat
  background-position: center center

  #events-inner
    min-width: width - 150px
    max-width: width * 1.25 - 150px
    margin 0 auto
    padding: 75px
    padding-bottom: 150px
    overflow: hidden

  h3
    padding-left: 10px

  p
    margin-bottom: 5px

  .day
    float: left
    width: 33.3333%

    &:nth-child(3n + 2)
      clear: both

    .day-inner
      margin: 15px
      padding: 20px 20px 20px
      background-color: transparentify(lighten(color-red, 97%), 90%)

  .event
    padding: 5px 10px 0
    cursor: pointer
    transition: all .2s ease-in-out
    position: relative

    &:hover
      cursor: pointer
      transform scale(1.05)
      h4
        color: darken(color-red, 10%)

  .date
    font-size: 10px
    color: #999
    margin-bottom: 2px
    display: block

///////////////////////////////////////////
//              Sponsors                 //
///////////////////////////////////////////

#sponsors
  overflow: hidden
  width: 100%
  background-image: url('../images/map-bottom-1x.jpeg')
  background-size: cover
  background-position: center bottom

  #sponsors-inner
    min-width: width - 150px
    max-width: width * 1.25 - 150px
    margin 0 auto
    padding: 75px
    padding-bottom: 150px
    overflow: hidden

  @media only screen and (-Webkit-min-device-pixel-ratio: 1.5), only screen and (-moz-min-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2), only screen and (min-device-pixel-ratio: 1.5)
    background-image: url('../images/map-bottom-2x.jpeg')

  img
    display: inline-block
    margin-right: 50px
    background-position: center center
    cursor: pointer
    transition: all .2s ease-in-out
    margin-bottom: 25px
    vertical-align: middle

    &:hover
      transform scale(1.05)

  #sponsors-one,
  #sponsors-local,
  #sponsors-product,
  #sponsors-partner
    overflow: hidden
    text-align: center
    margin-bottom: 75px

  #sponsors-one img
    logo-width = 250px
    max-width: logo-width
    max-height: (logo-width / 1.2)

  #sponsors-local img
    logo-width = 150px
    max-width: logo-width
    max-height: (logo-width / 1.2)

  #sponsors-product img
    logo-width = 150px
    max-width: logo-width
    max-height: (logo-width / 1.2)

  #sponsors-partner img
    logo-width = 125px
    max-width: logo-width
    max-height: (logo-width / 1.2)

