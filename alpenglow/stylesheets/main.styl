width = 960px

color-red = #c14638
color-blue = #68c8f2

transform-scale(x)
  -webkit-transform: scale(x);  // Chrome, Opera 15+, Safari 3.1+
  -ms-transform: scale(x);      // IE 9
  transform: scale(x);

transition(a b c)
  -webkit-transition: a b c;
  transition: a b c;

background-size-cover()
  filter: unquote("progid:DXImageTransform.Microsoft.AlphaImageLoader(src='.myBackground.jpg', sizingMethod='scale')")
  -ms-filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(src='myBackground.jpg', sizingMethod='scale')"
  -webkit-background-size: cover !important
  -moz-background-size: cover !important
  -o-background-size: cover !important
  background-size: cover !important

////////////////////////////////////////////////////////////////////////////////
//                                                                            //
//                                Elements                                    //
//                                                                            //
////////////////////////////////////////////////////////////////////////////////

a, &:visited, &:active
  color: darken(color-blue, 25%)

a:hover
  color: color-blue

body
  font-family oxygen
  line-height: 1.2em
  font-size: 12px
  color: #222

strong
  font-weight: bold

p
  margin-bottom: 10px

  &.large
    font-size: 18px
    line-height: 1.2em

h2, h3, h4
  font-weight: normal

h2
  display: none

h3
  font-size: 21px
  line-height: 1.2em
  margin-bottom: 0.2em
  color: darken(color-blue, 25%)

h4
  font-size: 15px
  line-height: 1.2em
  color: color-red

hr
  border: 0
  padding: 0
  margin: 0
  display: block
  height: 250px
  width: 100%
  background-image: url('../images/hr.jpg')
  background-size-cover()
  background-position: center center


////////////////////////////////////////////////////////////////////////////////
//                                                                            //
//                                 Layout                                     //
//                                                                            //
////////////////////////////////////////////////////////////////////////////////

body, html
  min-height: 100%
  min-width: width

///////////////////////////////////////////
//               Header                  //
///////////////////////////////////////////

header
  logo-source-width = 2048
  logo-source-height = 772
  logo-margin-horizantal = 150px
  logo-width = width - 2 * logo-margin-horizantal
  logo-height = logo-width * logo-source-height / logo-source-width

  overflow: hidden
  padding: 125px 0
  background-image: url('../images/map-top-1x.jpg')
  background-position: center top
  background-size-cover()
  text-align: center

  @media only screen and (-Webkit-min-device-pixel-ratio: 1.5), only screen and (-moz-min-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2), only screen and (min-device-pixel-ratio: 1.5)
    background-image: url('../images/map-top-2x.jpg')

  h1
    text-indent: -999999px
    background-image: url('../images/logo-1x.png')
    background-size: logo-width logo-height
    width: logo-width
    height: logo-height
    margin: 0 auto 25px

    @media only screen and (-Webkit-min-device-pixel-ratio: 1.5), only screen and (-moz-min-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2), only screen and (min-device-pixel-ratio: 1.5)
      background-image: url('../images/logo-2x.png')

  .subtitle
    color: color-red
    font-size: 14px

    a
      text-indent: -999999px
      background-size-cover()
      height: 20px
      width: 20px
      display: inline-block
      transition: all .2s ease-in-out
      position: relative
      top: -4px

      &:hover
        transform-scale: 1.2


    #social-facebook
      background-image: url('../images/social/facebook.png')
      margin-right: -4px

    #social-instagram
      background-image: url('../images/social/instagram.png')

///////////////////////////////////////////
//               About                   //
///////////////////////////////////////////

#about
  about-spacing = 75px

  width: 100%
  background-image: url("../images/0058.jpg")
  background-size-cover()
  background-position: 0 60%
  color: lighten(color-red, 80%)
  text-align: justify
  line-height: 1.2em
  font-size: 14px

  #about-content
    background-color darken(transparentify(color-red, 93%), 7%)
    width: 50%

    #about-content-inner
      margin: 0 auto;
      padding: about-spacing
      max-width: (width / 2)

///////////////////////////////////////////
//               Events                  //
///////////////////////////////////////////

#events
  background-image: url('../images/0084.jpg')
  background-size-cover()
  background-repeat: no-repeat
  background-position: center center

  #events-inner
    min-width: width - 150px
    max-width: width * 1.25 - 150px
    margin 0 auto
    padding: 75px
    padding-bottom: 150px
    overflow: hidden

    & > p
      text-align: center
      color: color-red
      font-size: 15px
      margin-bottom: 50px

    .day
      width: 33.3333%
      float: left
      &#events-day-4, &#events-day-7
        clear: both

      h3
        padding-left: 10px

      p
        margin-bottom: 5px

      .day-inner
        margin: 15px
        padding: 20px 20px 20px
        background-color: transparentify(lighten(color-red, 97%), 90%)

        .event
          padding: 5px 10px 0
          cursor: pointer
          transition: all .2s ease-in-out
          position: relative

          // &:hover
          //   cursor: pointer
          //   transform scale(1.05)
          //   h4
          //     color: darken(color-red, 10%)

          .date
            font-size: 10px
            color: #999
            margin-bottom: 2px
            display: block

///////////////////////////////////////////
//              Sponsors                 //
///////////////////////////////////////////

#sponsors
  overflow: hidden
  width: 100%
  background-image: url('../images/bright-squares-1x.png')
  background-position: center bottom
  background-size: 297px 297px

  @media only screen and (-Webkit-min-device-pixel-ratio: 1.5), only screen and (-moz-min-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2), only screen and (min-device-pixel-ratio: 1.5)
    background-image: url('../images/bright-squares-2x.png')

  #sponsors-inner
    min-width: width - 150px
    max-width: width * 1.25 - 150px
    margin 0 auto
    padding: 125px 75px 75px
    overflow: hidden

  img
    display: inline-block
    margin-right: 50px
    background-position: center center
    cursor: pointer
    margin-bottom: 25px
    vertical-align: middle
    transition: all .2s ease-in-out

    &:hover
      transform-scale: 1.05

  #sponsors-one,
  #sponsors-local,
  #sponsors-product,
  #sponsors-partner
    overflow: hidden
    text-align: center
    margin-bottom: 75px

  #sponsors-one img
    logo-width = 250px
    max-width: logo-width
    max-height: (logo-width / 1.2)

  #sponsors-local img
    logo-width = 150px
    max-width: logo-width
    max-height: (logo-width / 1.2)

  #sponsors-product img
    logo-width = 150px
    max-width: logo-width
    max-height: (logo-width / 1.2)

  #sponsors-partner img
    logo-width = 125px
    max-width: logo-width
    max-height: (logo-width / 1.2)

  footer
    text-align: center

